import java.util.Scanner;

public class Livro2 {
    public static void main (String[] args) {
        Scanner entrada = new Scanner(System.in);

            System.out.println("Cadastre o primeiro livro: ");
            String livro1 = entrada.nextLine();

            System.out.println("Cadastre o Autor do Primeiro livro: ");
            String autor1 = entrada.nextLine();

           System.out.println("Cadastre o Preço do Primeiro livro: ");
           double preco1 = entrada.nextDouble();

            entrada.nextLine();

            System.out.println("Cadastre o segundo livro: ");
            String livro2 = entrada.nextLine();

            System.out.println("Cadastre o Autor do Segundo livro: ");
            String autor2 = entrada.nextLine();

            System.out.println("Cadastre o Preço do Segundo livro: ");
            double preco2 = entrada.nextDouble();

            System.out.println(" Primeiro livro cadastrado: " + livro1 + " Primeiro Autor cadastrado: " + autor1 + " Primeiro Preço cadastrado: " + preco1);
            System.out.println(" Segundo livro cadastrado: " + livro2 + " Segundo Autor cadastrado: " + autor2 + " Segundo Preço cadastrado: " + preco2);

    }
}
